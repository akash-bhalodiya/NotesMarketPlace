@model IEnumerable<NotesMarketplace.ViewModels.BuyerRequestViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="blank">
</section>

<!-- Section Buyer Request -->
<section id="buyer-request">

    <div class="content-box">

        <div class="container">

            @using (Html.BeginForm("Index", "BuyerRequest", FormMethod.Get))
            {
                <div class="row">
                    <div class="col-lg-7 col-md-6 col-sm-5 col-12 table-heading my-auto">
                        <h4 class="heading-md">Buyer Request</h4>
                    </div>
                    <div class="col-lg-5 col-md-6 col-sm-7 col-12" id="table-search">
                        <div class="row search">
                            <div class="search-bar col-lg-9 col-md-9 col-sm-8 col-8 form-group">
                                <input type="search" name="search" class="form-control" id="search" value="@ViewBag.Search" placeholder="Search">
                            </div>
                            <div class="col-lg-3 col-md-3 col-sm-4 col-4 btn-search">
                                <button type="submit" class="btn btn-color">Search</button>
                            </div>
                        </div>
                    </div>
                </div>

            }

            <div class="row table-general table-responsive">

                <table class="table">
                    <thead>
                        <tr>

                            <th>Sr No.</th>
                            <th>@Html.ActionLink("Notes Title", "Index", new { sortorder = ViewBag.SortOrder == null ? "Desc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc"), sortby = "Title", search = @ViewBag.Search, page = @ViewBag.PageNumber })</th>
                            <th>@Html.ActionLink("Category", "Index", new { sortorder = ViewBag.SortOrder == null ? "Desc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc"), sortby = "Category", search = @ViewBag.Search, page = @ViewBag.PageNumber })</th>
                            <th>@Html.ActionLink("Buyer", "Index", new { sortorder = ViewBag.SortOrder == null ? "Desc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc"), sortby = "Buyer", search = @ViewBag.Search, page = @ViewBag.PageNumber })</th>
                            <th>@Html.ActionLink("Phone no.", "Index", new { sortorder = ViewBag.SortOrder == null ? "Desc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc"), sortby = "Phone", search = @ViewBag.Search, page = @ViewBag.PageNumber })</th>
                            <th>@Html.ActionLink("Sell Type", "Index", new { sortorder = ViewBag.SortOrder == null ? "Desc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc"), sortby = "Type", search = @ViewBag.Search, page = @ViewBag.PageNumber })</th>
                            <th>@Html.ActionLink("Price", "Index", new { sortorder = ViewBag.SortOrder == null ? "Desc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc"), sortby = "Price", search = @ViewBag.Search, page = @ViewBag.PageNumber })</th>
                            <th>@Html.ActionLink("Downloaded Date/Time", "Index", new { sortorder = ViewBag.SortOrder == null ? "Desc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc"), sortby = "DownloadedDate", search = @ViewBag.Search, page = @ViewBag.PageNumber })</th>
                            <th class="content-center"></th>

                        </tr>
                    </thead>
                    <tbody>

                        @{ var srno = (ViewBag.PageNumber - 1) * 10; }
                        @foreach (var item in Model)
                        {
                            <tr>
                                @{ srno = srno + 1; }
                                <td class="table-sr-no">@srno</td>
                                <td class="table-notes-title"><a href="@Url.Action("Details", "Notes", new { id = @item.TblDownload.NoteID })">@item.TblDownload.NoteTitle</a></td>
                                <td>@item.TblDownload.NoteCategory</td>
                                <td>@item.TblUser.Email</td>
                                <td>@item.TblUserProfile.PhoneNumberCountryCode @item.TblUserProfile.PhoneNumber</td>
                                @if (@item.TblDownload.IsPaid == true)
                                {
                                    <td>Paid</td>
                                    <td>$@item.TblDownload.PurchasedPrice</td>
                                }
                                else
                                {
                                    <td>Free</td>
                                    <td>$0</td>
                                }
                                <td>@item.TblDownload.CreatedDate.Value.ToString("dd MMM yyyy hh:mm:ss")</td>
                                <td>
                                    <div class="table-images">

                                        <a href="@Url.Action("Details", "Notes", new { id = @item.TblDownload.NoteID } )"><img src="~/images/Dashboard/eye.png" alt="view" class="eye"></a>
                                        <!-- Default dropleft button -->
                                        <div class="btn-group dropleft">
                                            <button type="button" id="dropdownMenu" class="btn" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                <img src="~/images/Dashboard/3dot.png" alt="menu" class="dots">
                                            </button>
                                            <div class="dropdown-menu" aria-labelledby="dropdownMenu">
                                                <a href="@Url.Action("AllowDownload", new { id = @item.TblDownload.ID })" class="dropdown-item" type="button">Allow Download</a>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>

            </div>

            <div class="row justify-content-center">

                <nav aria-label="...">
                    <ul class="pagination">

                        <li class="page-item">
                            @if (ViewBag.PageNumber == 1)
                            {
                                <a class="page-link" href="@Url.Action("Index",  new { sortorder = @ViewBag.SortOrder, sortby = @ViewBag.SortBy, search = @ViewBag.Search, page = @ViewBag.PageNumber })"><i class="fa fa-angle-left"></i></a>
                            }
                            else
                            {
                                <a class="page-link" href="@Url.Action("Index", new { sortorder = @ViewBag.SortOrder, sortby = @ViewBag.SortBy, search = @ViewBag.Search, page = @ViewBag.PageNumber - 1 })"><i class="fa fa-angle-left"></i></a>
                            }
                        </li>

                        @{
                            double? TotalPages = ViewBag.TotalPages;

                            for (int i = 1; i <= TotalPages; i++)
                            {
                                if (i == ViewBag.PageNumber)
                                {
                                    <li class="page-item active">
                                        <a class="page-link">@i<span class="sr-only">(current)</span></a>
                                    </li>
                                }
                                else
                                {
                                    <li class="page-item">@Html.ActionLink(i.ToString(), "Index", new { sortorder = @ViewBag.SortOrder, sortby = @ViewBag.SortBy, search = @ViewBag.Search, page = i }, new { @class = "page-link" })</li>
                                }
                            }
                        }

                        <li class="page-item">
                            @if (ViewBag.PageNumber == TotalPages)
                            {
                                <a class="page-link" href="@Url.Action("Index", new { sortorder = @ViewBag.SortOrder, sortby = @ViewBag.SortBy, search = @ViewBag.Search, page = @ViewBag.PageNumber })"><i class="fa fa-angle-right"></i></a>
                            }
                            else
                            {
                                <a class="page-link" href="@Url.Action("Index", new { sortorder = @ViewBag.SortOrder, sortby = @ViewBag.SortBy, search = @ViewBag.Search, page = @ViewBag.PageNumber + 1 })"><i class="fa fa-angle-right"></i></a>
                            }
                        </li>

                    </ul>
                </nav>

            </div>

        </div>

    </div>

</section>
<!-- Section Buyer Request END -->
