@model IEnumerable<NotesMarketplace.Models.SellerNote>
@{
    ViewBag.Title = "SearchNotes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="blank">
</section>

<!-- Section Background Image -->
<section id="search-notes-bg-image">

    <div id="search-notes-content">

        <div class="container">

            <div class="row text-center background-img-heading-position">

                <div class="background-img-heading">
                    <h1>Search Notes</h1>
                </div>

            </div>

        </div>

    </div>

</section>
<!-- Section Background Image END -->
<!-- Section Search And Filter Notes -->
<section id="search-notes-filter">

    <div class="content-box-top">

        <div class="container">

            <div class="row ">

                <div class="col-lg-12 col-md-12">
                    <h4 class="heading-md">Search And Filter Notes</h4>
                </div>

            </div>

            <div class="row search-filter">

                <div class="form-group col-lg-12 col-md-12 col-sm-12">
                    <input type="search" class="form-control" id="search" placeholder="Search Notes Here">
                </div>

                <div class="form-group col-lg-2 col-md-4 col-sm-6">
                    <select id="type" class="form-control">
                        <option selected>Select Type</option>
                        <option>Data 1</option>
                        <option>Data 2</option>
                    </select>
                </div>

                <div class="form-group col-lg-2 col-md-4 col-sm-6">
                    <select id="category" class="form-control">
                        <option selected>Select Category</option>
                        <option>Data 1</option>
                        <option>Data 2</option>
                    </select>
                </div>

                <div class="form-group col-lg-2 col-md-4 col-sm-6">
                    <select id="university" class="form-control">
                        <option selected>Select University</option>
                        <option>Data 1</option>
                        <option>Data 2</option>
                    </select>
                </div>

                <div class="form-group col-lg-2 col-md-4 col-sm-6">
                    <select id="course" class="form-control">
                        <option selected>Select Course</option>
                        <option>Data 1</option>
                        <option>Data 2</option>
                    </select>
                </div>

                <div class="form-group col-lg-2 col-md-4 col-sm-6">
                    <select id="country" class="form-control">
                        <option selected>Select Country</option>
                        <option>Data 1</option>
                        <option>Data 2</option>
                    </select>
                </div>

                <div class="form-group col-lg-2 col-md-4 col-sm-6">
                    <select id="rating" class="form-control">
                        <option selected>Select Rating</option>
                        <option>Data 1</option>
                        <option>Data 2</option>
                    </select>
                </div>

            </div>

        </div>

    </div>

</section>
<!-- Section Search And Filter Notes END -->
<!-- Searched Notes -->
<section id="resulted-notes">

    <div class="content-box">

        <div class="container">

            <div class="row">

                <div class="col-lg-12 col-md-12">
                    <h4 class="heading-md">Total 18 Results</h4>
                </div>

            </div>

            <!-- Notes -->
            <div class="row results">

                @foreach (var item in Model)
                {
                    <!-- Notes -->
                    <div class="col-lg-4 col-md-6 col-sm-12 result-box">
                        <div class="resulted-note">
                            <div class="resulted-note-image">
                                <a href="#"><img src="@Url.Content(item.DisplayPicture)" alt="note"></a>
                            </div>
                            <div class="resulted-note-detail">
                                <a href="@Url.Action("Details", "Notes", new { id = item.ID })">
                                    <h6 class="heading-sm">@item.Title</h6>
                                </a>
                                <ul>
                                    <li><img src="~/images/Search/university.png">@item.UniversityName, @item.Country1.Name</li>
                                    <li><img src="~/images/Search/pages.png">@item.NumberofPages pages</li>
                                    <li><img src="~/images/Search/calendar.png">@item.PublishedDate.Value.ToString("MMM dd yyyy")</li>
                                    <li><img src="~/images/Search/flag.png"><span class="flag">5 User Marked This Note As Inappropriate</span></li>
                                    <li>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star-o"></i>
                                        <i class="fa fa-star-o"></i>
                                        <span>100 reviews</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                }

            </div>

            <!-- Pagination -->
            <div class="row justify-content-center">

                <nav aria-label="search result pages">
                    <ul class="pagination">
                        <li class="page-item">
                            <a class="page-link" href="#"><i class="fa fa-angle-left"></i></a>
                        </li>
                        <li class="page-item active">
                            <a class="page-link" href="#">1<span class="sr-only">(current)</span></a>
                        </li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item"><a class="page-link" href="#">4</a></li>
                        <li class="page-item"><a class="page-link" href="#">5</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#"><i class="fa fa-angle-right"></i></a>
                        </li>
                    </ul>
                </nav>

            </div>

        </div>

    </div>

</section>
<!-- Searched Notes END -->
