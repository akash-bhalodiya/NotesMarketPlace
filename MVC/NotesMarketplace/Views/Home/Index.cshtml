<!-- Sectionn Works -->
<section id="how-it-work">

    <div class="content-box">

        <div class="container">

            <!-- Work Heading -->
            <div class="row">
                <div class="mx-auto">
                    <h2 class="heading-lg">How it works</h2>
                </div>
            </div>

            <div class="row">

                <!-- Work 01 -->
                <div class="work col-lg-6 col-md-6 col-sm-12 col-12 text-center">

                    <div class="work-image">
                        <img src="~/images/Homepage/download.png" alt="download">
                    </div>

                    <h5 class="heading-md">Download Free/Paid Notes</h5>
                    <p>Get Material for your<br>Course etc.</p>

                    <div class="btn-work">
                        <a class="btn btn-color" href="@Url.Action("SearchNotes")" title="Download" role="button">Download</a>
                    </div>

                </div>

                <!-- Work 02 -->
                <div class="work col-lg-6 col-md-6 col-sm-12 col-12 text-center">

                    <div class="work-image">
                        <img src="~/images/Homepage/seller.png" alt="download">
                    </div>

                    <h5 class="heading-md">Seller</h5>
                    <p>Upload and Download Course <br>and Material etc.</p>

                    <div class="btn-work">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a class="btn btn-color" href="@Url.Action("MyNotes","Dashboard")" title="Sell Book" role="button">Sell Book</a>
                        }
                        else
                        {
                            <a class="btn btn-color" href="@Url.Action("Login","Account")" title="Sell Book" role="button">Sell Book</a>
                        }

                    </div>

                </div>

            </div>

        </div>

    </div>

</section>
