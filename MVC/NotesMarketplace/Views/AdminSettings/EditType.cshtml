@model NotesMarketplace.ViewModels.AddTypeViewModel

@{
    ViewBag.Title = "EditType";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="blank">
</section>

<!-- Section Add Type -->
<section id="add-type">

    <div class="content-box">

        <div class="container">

            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                    <h2 class="heading-lg">Add Type</h2>
                </div>
            </div>

            <br>

            @using (Html.BeginForm("EditType", "AdminSettings", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                @Html.HiddenFor(model => model.ID)

                <div class="row">

                    <div class="form-group col-lg-6 col-md-8 col-sm-12 col-12">
                        <label for="type-name">Type *</label>
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", id = "type-name", placeholder = "Enter type", required = "required" })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-invalid" })
                    </div>

                </div>

                <div class="row">

                    <div class="form-group col-lg-6 col-md-8 col-sm-12 col-12">
                        <label for="description">Description *</label>
                        @Html.TextAreaFor(model => model.Description, new { @class = "form-control", id = "description", placeholder = "Enter your description", required = "required" })
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-invalid" })
                    </div>

                </div>

                <div class="row">
                    <div class="col-lg-2 col-md-2 col-sm-4 col-6">
                        <div class="btn-submit">
                            <button class="btn btn-color" type="submit">Submit</button>
                        </div>
                    </div>
                </div>

            }

        </div>

    </div>

</section>
<!-- Section Add Type END -->
