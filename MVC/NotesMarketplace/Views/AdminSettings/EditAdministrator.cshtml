@model NotesMarketplace.ViewModels.AddAdministratorViewModel

@{
    ViewBag.Title = "Edit Administrator";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="blank">
</section>

<!-- Section Add Administrator -->
<section id="add-administrator">

    <div class="content-box">

        <div class="container">

            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                    <h2 class="heading-lg">Add Administrator</h2>
                </div>
            </div>

            <br>

            @using (Html.BeginForm("EditAdministrator", "AdminSettings", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                @Html.HiddenFor(model => model.ID)

                <div class="row">

                    <div class="form-group col-lg-6 col-md-8 col-sm-12 col-12">
                        <label for="first-name">First Name *</label>
                        @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control", id = "first-name", placeholder = "Enter your first name", required = "required" })
                        @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-invalid" })
                    </div>

                </div>

                <div class="row">

                    <div class="form-group col-lg-6 col-md-8 col-sm-12 col-12">
                        <label for="last-name">Last Name *</label>
                        @Html.TextBoxFor(model => model.LastName, new { @class = "form-control", id = "last-name", placeholder = "Enter your last name", required = "required" })
                        @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-invalid" })
                    </div>

                </div>

                <div class="row">

                    <div class="form-group col-lg-6 col-md-8 col-sm-12 col-12">
                        <label for="title">Email *</label>
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", id = "email", type = "email", placeholder = "Enter your email address", required = "required" })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-invalid" })
                    </div>

                </div>

                <div class="row">

                    <div class="col-lg-6 col-md-8 col-sm-12 col-12">
                        <div class="row" id="phone">
                            <div class="form-group col-lg-3 col-md-3 col-sm-3 col-4">
                                <label for="country-code">Phone Number *</label>
                                @Html.DropDownListFor(model => model.PhoneNumberCountryCode, new SelectList(@Model.CountryCodeList), new { @class = "form-control", id = "country-code", required = "required" })
                                @Html.ValidationMessageFor(model => model.PhoneNumberCountryCode, "", new { @class = "text-invalid" })
                            </div>
                            <div class="form-group col-lg-9 col-md-9 col-sm-9 col-8">
                                <label for="phone-number"> </label>
                                @Html.TextBoxFor(model => model.PhoneNumber, new { @class = "form-control", id = "phone-number", placeholder = "Enter your phone number", required = "required" })
                                @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-invalid" })
                            </div>
                        </div>
                    </div>

                </div>

                <div class="row">
                    <div class="col-lg-2 col-md-2 col-sm-4 col-6">
                        <div class="btn-submit">
                            <button class="btn btn-color" type="submit">Submit</button>
                        </div>
                    </div>
                </div>

            }

            <br>

        </div>

    </div>

</section>
<!-- Section Add Administrator END -->
