@model NotesMarketplace.ViewModels.SignupViewModel
@{
    ViewBag.Title = "Sign up";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

<!-- Section Sign Up -->
<section id="sign-up">

    <div class="form-container  my-auto">

        <div class="container">

            <div class="logo text-center">
                <img src="~/images/pre-login/top-logo.png" alt="logo" class="img-fluid">
            </div>

            <!-- White Box -->
            <div class="white-box">

                <!-- Heading -->
                <div class="form-heading text-center">
                    <h2 class="heading-lg">Create an Account</h2>
                    <p>Enter your detail to sign up</p>
                </div>

                <!-- Sign Up Form -->
                @using (Html.BeginForm("Signup", "Account", FormMethod.Post, new { @class = "sign-up-form" }))
                {
                    @Html.AntiForgeryToken()

                    if (ViewBag.Success == true)
                    {
                        <div class="valid-feedback">
                            <i class="fa fa-check-circle"></i> Your account has been successfully created.
                        </div>
                    }

                    <div class="form-group">
                        @Html.LabelFor(model => model.FirstName)
                        @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control", id = "first-name", placeholder = "Enter your first name", required = "required" })
                        @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-invalid" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.LastName)
                        @Html.TextBoxFor(model => model.LastName, new { @class = "form-control", id = "last-name", placeholder = "Enter your last name", required = "required" })
                        @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-invalid" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Email)
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", id = "email", type = "email", placeholder = "Enter your email address", required = "required" })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-invalid" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Password)
                        @Html.TextBoxFor(model => model.Password, new { @class = "form-control", id = "password", type = "password", placeholder = "Enter your password", required = "required" })
                        <img src="~/images/pre-login/eye.png" toggle="#password" class="field-icon toggle-password" />
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-invalid" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.ConfirmPassword)
                        @Html.TextBoxFor(model => model.ConfirmPassword, new { @class = "form-control", id = "confirm-password", type = "password", placeholder = "Re enter your password", required = "required" })
                        <img src="~/images/pre-login/eye.png" toggle="#confirm-password" class="field-icon toggle-password" />
                        @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-invalid" })
                    </div>

                    <button type="submit" class="btn btn-form">Signup</button>
                }

                <p>Already have an account? @Html.ActionLink("Login", "Login", "Account")</p>

            </div>

        </div>

    </div>

</section>
<!-- Section Sign Up END -->
