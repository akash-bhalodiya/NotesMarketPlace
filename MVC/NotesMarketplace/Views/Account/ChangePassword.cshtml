@model NotesMarketplace.ViewModels.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

<!-- Section Change Password -->
<section id="change-password">

    <div class="form-container  my-auto">

        <div class="container">

            <div class="logo text-center">
                <img src="~/images/pre-login/top-logo.png" alt="logo" class="img-fluid">
            </div>

            <!-- White Box -->
            <div class="white-box">

                <!-- Heading -->
                <div class="form-heading text-center">
                    <h2 class="heading-lg">Change Password</h2>
                    <p>Enter your new password to change your password</p>
                </div>

                <!-- Change Password Form -->
                @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { @class = "change-password-form" }))
                 {
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        @Html.LabelFor(model => model.OldPassword)
                        @Html.TextBoxFor(model => model.OldPassword, new { @class = "form-control", id = "old-password", type = "password", placeholder = "Enter your old password", required = "required" })
                        <img src="~/images/pre-login/eye.png" toggle="#old-password" class="field-icon toggle-password" />
                        @Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "text-invalid" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.NewPassword)
                        @Html.TextBoxFor(model => model.NewPassword, new { @class = "form-control", id = "new-password", type = "password", placeholder = "Enter your new password", required = "required" })
                        <img src="~/images/pre-login/eye.png" toggle="#new-password" class="field-icon toggle-password" />
                        @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-invalid" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.NewConfirmPassword)
                        @Html.TextBoxFor(model => model.NewConfirmPassword, new { @class = "form-control", id = "confirm-password", type = "password", placeholder = "Enter your confirm password", required = "required" })
                        <img src="~/images/pre-login/eye.png" toggle="#old-password" class="field-icon toggle-password" />
                        @Html.ValidationMessageFor(model => model.NewConfirmPassword, "", new { @class = "text-invalid" })
                    </div>

                    <button type="submit" class="btn btn-form">Submit</button>

                 }

            </div>

        </div>

    </div>

</section>
<!-- Section Change Password END -->